<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:VideoStream.Controls"
             x:Class="VideoStream.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>

        <controls:MEVideoView
                    x:Name="mediaElement"
                    Aspect="AspectFit"
                    HorizontalOptions="Fill"
                    IsLooping="True"
                    IsMuted="True"
                    ShowsPlaybackControls="True"
                    Source="https://10248bcmediaservice-euwe.streaming.media.azure.net/0ba0b4e5-0c4e-4699-acdd-359fadb4e9e2/cac1204c-bb85-4dbd-bf92-f32c4905.ism/manifest(format=m3u8-aapl)" />
